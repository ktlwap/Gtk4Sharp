<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="ClangSharp" Version="17.0.1" />
      <PackageReference Include="ClangSharp.PInvokeGenerator" Version="17.0.1" />
      <PackageReference Include="libclang" Version="17.0.4" />
      <PackageReference Include="libClangSharp" Version="17.0.4" />
      <PackageReference Include="LibGit2Sharp" Version="0.29.0" />
    </ItemGroup>
    
    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
        <PackageReference Include="libclang.runtime.win-x64" Version="17.0.4" />
        <PackageReference Include="libClangSharp.runtime.win-x64" Version="17.0.4" />
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
        <PackageReference Include="libclang.runtime.linux-x64" Version="17.0.4" />
        <PackageReference Include="libClangSharp.runtime.linux-x64" Version="17.0.4" />
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
        <PackageReference Include="libclang.runtime.osx-x64" Version="17.0.4" />
        <PackageReference Include="libClangSharp.runtime.osx-x64" Version="17.0.4" />
        <PackageReference Include="libclang.runtime.osx-arm64" Version="17.0.4" />
        <PackageReference Include="libClangSharp.runtime.osx-arm64" Version="17.0.4" />
    </ItemGroup>

</Project>
